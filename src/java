import java.sql.*;

public class Main {
    public static void main(String[] args) {
        try {
            Connection conn = DriverManager.getConnection("jdbc:mysql://localhost/HostelGrocery", "root", "");
            Statement stmt = conn.createStatement();
            ResultSet rs = stmt.executeQuery("SELECT * FROM Inventory");
            while (rs.next()) {
                System.out.println(rs.getString("item_name") + " - Quantity: " + rs.getInt("quantity"));
            }
            conn.close();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
